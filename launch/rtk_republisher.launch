<launch>

  <arg name="uav_name" default="$(optenv UAV_NAME uav)"/>

  <group ns="$(arg uav_name)">

    <node pkg="nodelet" type="nodelet" name="rtk_republisher" args="load mrs_odometry/RtkRepublisher mrs_nodelet_manager" output="screen">

      <rosparam file="$(find mrs_odometry)/config/rtk_republisher.yaml" />

      <!-- Subscribers --> 
      <remap from="~odom_in" to="ground_truth" />
      <remap from="~rtk_out" to="rtk_gps/local" />

    </node>

  </group>

</launch>
